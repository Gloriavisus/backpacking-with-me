<section class="tripcolor">
  <h1>TRIP</h1>
{{#each tripUsers}}
  {{username}}
{{/each}}

<form action="/trip/{{id}}/getFlights" method="POST">
<div class="search">
  <label for="countryFrom">From</label>
  <input type="text" name="countryFrom" id="countryFrom" value="{{countryTo}}">
  <label for="countryTo">To</label>
  <input type="text" name="countryTo" id="countryTo">
  <label for="dateFrom">Departure</label>
  <input type="text" name="dateFrom" id="dateFrom">
  <label for="dateTo">Arrives</label>
  <input type="text" name="dateTo" id="dateTo">
  <button type="submit">Send</button>
</div>
</form>
{{#if cityFrom}}
<form action="/trip/{{id}}/save" method="POST">

  <h3>The trip of your dreams!</h3>
  <div class="save">
  <input name="cityFrom" type="text" value={{cityFrom}}>
  <input name="cityTo" type="text" value={{cityTo}}>
  <input name="price" type="text" value={{price}}>
  <input name="flyDuration" type="text" value={{fly_duration}}>
  <button type="submit">Save</button>
  </div>
</form>
{{/if}}
<div class="info">
<h3>This current Trip Info</h3>
<p>To: {{trip.countryTo}}</p>
<p>From: {{trip.countryFrom}}</p>
<p>Price: {{trip.price}}</p>
</div>
</section>